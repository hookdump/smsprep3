<div class="widget ">

  <div class="widget-head">
    <div class="pull-left">Students</div>
    <div class="clearfix"></div>
  </div>

  <div class="widget-content">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width='100'>Phone</th>
          <th width='50'>eID</th>
          <th width='110'>Cron</th>
          <th>Lessons</th>
          <th width='140'>Status</th>
          <th width='50'>Q's</th>
          <th width='90'>Actions</th>
        </tr>
      </thead>
      <tbody>

        <% students.forEach(function(stu) { %>
          <tr>
            <td><%=stu.phone%></td>
            <td><%=stu.externalId%></td>
            <td>
              <span class='label label-inverse'><%=stu.timezone%></span> 
              <% stu.schedule.forEach(function(le) { %>
                <span class='label'><%=le%></span> 
              <% }); %>
           </td>
            <td>
              <% stu.lessongroups.forEach(function(lg) { %>
                <span class='label label-success'><%=lg%></span>
              <% }); %>

              <% stu.lessons.forEach(function(le) { %>
                <span class='label'><%=le%></span>
              <% }); %>
            </td>
            <td>

              <% if (stu.active) { %>
                <span class='label label-success'>ACTIVE</span>
              <% } else { %>
                <span class='label label-important'>ACTIVE</span>
              <% } %>

              <% if (stu.initialized) { %>
                <a href='/admin/students/init_slooce/<%=stu._id%>'><span class='label label-success'>INIT</span></a>
              <% } else { %>
                <a href='/admin/students/init_slooce/<%=stu._id%>'><span class='label label-important'>INIT</span></a>
              <% } %>

              <% if (stu.confirmed) { %>
                <span class='label label-success'>CONF</span>
              <% } else { %>
                <span class='label label-important'>CONF</span>
              <% } %>
            </td>
            <td>
              <span class='label'><%= stu.answers.length %></span>
            </td>
            <td>
              <a href='/admin/students/details/<%=stu._id%>' class='btn btn-primary details_student'><i class="icon-search"></i></a> 
              <a href='/admin/students/delete/<%=stu._id%>' class='btn btn-danger del_student'><i class="icon-remove"></i></a>
            </td>
          </tr>
        <% }); %>

      </tbody>
    </table>


  </div>

  <div class="widget-foot">

    <p></p>

    <div class="clearfix"></div> 

  </div>

</div>


<div id='crons_page'></div>

<script src="/public/js/_students.js"></script>