<div class='main'>
  <h2>Log in</h2>

  <form action="/login" method="post">
      <div>
          <input autocomplete="off" placeholder="Your username" type="text" name="username"/>
      </div>
      <div>
          <input autocomplete="off" placeholder="Your password" type="password" name="password"/>
      </div>
      <div>
          <input type="submit" class='btn' value="Log In"/>
      </div>
  </form>

</div>
