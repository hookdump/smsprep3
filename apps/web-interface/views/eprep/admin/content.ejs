<div class="row-fluid">
  <div class="span6">

    <!-- Widget -->
    <div class="widget wgreen">
      <!-- Widget head -->
      <div class="widget-head">
        <div class="pull-left">Review Content</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
          <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
      </div>             

      <!-- Widget content -->
      <div class="widget-content">
        <div class="padd">

		<% lessonGroups.forEach(function(lgroup) { %>

			<h4><%=lgroup%></h4>
			<ul>
			<% for(var y=0; y<lessons[lgroup].length; y++) { %>
				<% var lesson = lessons[lgroup][y] %>
				<li>
					<a href='/admin/content/lesson/<%=lesson.code%>'><b><%=lesson.code%></b> (<%=lesson.count%>)</a>
				</li>
			<% }Â %>
			</ul>

		<% }); %>


        </div>
      </div>
      <!-- Widget ends -->

    </div>
  </div>

  <div class="span6">

    <div class="widget wblue">

      <div class="widget-head">
        <div class="pull-left">Upload HTML Spreadsheet</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
          <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
      </div>             

      <div class="widget-content">
        <div class="padd">

          <!-- ... -->
		<form role="form" method="POST" action="/admin/content/upload" enctype="multipart/form-data">
			<div class="form-group">
				<label for="uploadFile">File</label>
				<input type="file" id="uploadFile" name="uploadFile">
				<p class="help-block">This should be a Google Spreadsheet exported to HTML</p>
			</div>
			<button type="submit" class="btn btn-default">Upload</button>
		</form>


        </div>
      </div>

    </div>




    <div class="widget wblue">

      <div class="widget-head">
        <div class="pull-left">Import Content</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
          <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
      </div>             

      <div class="widget-content">
        <div class="padd">

	        <!-- ... -->
			<ul>
				<% for(var x=0; x<files.length; x++) { %>
					<% var filename = files[x] %>
					<% // filename = filename.replace(".html", ".web"); %>
					<li>
					<a href='/admin/content/import/<%=filename%>'><%=filename%></a>
					</li>
				<% } %>
			</ul> 

        </div>
      </div>

    </div>


    <div class="widget wblue">

      <div class="widget-head">
        <div class="pull-left">Validate Content</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
          <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
      </div>             

      <div class="widget-content">
        <div class="padd">

	        <!-- ... -->
			<button class='btn btn-primary'>Run</button>

        </div>
      </div>

    </div>








  </div>
</div>

<div id='content_page'></div>
<script src="/public/js/_content.js"></script>